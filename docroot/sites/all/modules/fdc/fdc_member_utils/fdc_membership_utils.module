function fdc_membership_utils_time_of_day() {
	$time = time();
	$hour = date("g", $time);
	$m = date("A", $time);

	if ($m == "AM") {
		if ($hour == 12) {
			return "Good Evening";
		}
		elseif ($hour < 4) {
			return "Good Evening";
		}
		elseif ($hour > 3) {
			return "Good Morning";
		}
	}
	elseif ($m == "PM") {
		if ($hour == 12) {
			return "Good Afternoon";
		}
		elseif ($hour < 7) {
			return "Good Afternoon";
		}
		elseif ($hour > 6) {
			return "Good Evening";
		}
	}
}

